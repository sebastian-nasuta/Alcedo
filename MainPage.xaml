<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Alcedo.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <HorizontalStackLayout HorizontalOptions="Fill">
                <Button
                    x:Name="LoadImageBtn"
                    Text="Load Image"
                    Clicked="OnLoadImageClickedAsync"
                    HorizontalOptions="Start" />
                
                <Button
                    x:Name="TakePhotoBtn"
                    Text="Take Photo"
                    Clicked="OnTakePhotoClickedAsync"
                    HorizontalOptions="End" />
            </HorizontalStackLayout>

            <Image
                x:Name="LoadedImage"
                MaximumHeightRequest="300"
                Aspect="AspectFit" />

            <Button
                x:Name="GenerateTagsBtn"
                Text="Generate tags"
                Clicked="OnGenerateTagsClickedAsync"
                HorizontalOptions="Fill" />

            <Label
                x:Name="TagsLabel"
                Text="Tags will appear here"
                FontSize="20"
                HorizontalOptions="Center" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
